<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#9FBFA0"
    tools:context=".CreateSection">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/dark_green"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Section"/>
        <EditText
            android:id="@+id/Year"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Year level" />
        <EditText
            android:id="@+id/Section"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Section" />
        <EditText
            android:id="@+id/SectionCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Section Code(ex.BSCS1A)" />
        <EditText
            android:id="@+id/Subject"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="Subject" />
        <EditText
            android:id="@+id/SubCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="CourseCode" />
        <Button
            android:id="@+id/Create"
            android:text="Create Section"
            android:background="@drawable/mybutton"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>



</RelativeLayout>